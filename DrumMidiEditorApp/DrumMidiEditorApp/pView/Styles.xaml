<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Grid">
    </Style>

    <Style x:Key="BasicComboBoxStyle" TargetType="ComboBox">
    </Style>
    <Style x:Key="BasicListViewStyle" TargetType="ListView">
    </Style>
    <Style x:Key="BasicNumberBoxStyle" TargetType="NumberBox">
        <Setter Property="SpinButtonPlacementMode" Value="Hidden" />
        <Setter Property="ValidationMode" Value="InvalidInputOverwritten" />
    </Style>

    <Style x:Key="BasicTextBoxStyle" TargetType="TextBox">
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
    </Style>    
    
    <Style x:Key="BasicButtonStyle" TargetType="Button">
    </Style>
    
    <Style x:Key="BasicToggleButtonStyle" TargetType="ToggleButton">
    </Style>
    <Style x:Key="BasicToggleSwitchStyle" TargetType="ToggleSwitch">
    </Style>
    
</ResourceDictionary>
