    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Style="{StaticResource TableHeader}">
            <TextBlock x:Uid="ColumnMidiMapDisplay" />
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1" Style="{StaticResource TableHeader}">
            <TextBlock x:Uid="ColumnMidiMapKey" />
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2" Style="{StaticResource TableHeader}">
            <TextBlock x:Uid="ColumnMidiMapName" />
        </Grid>
        <Grid Grid.Row="0" Grid.Column="3" Style="{StaticResource TableHeader}">
            <TextBlock x:Uid="ColumnMidiMapVolume" />
        </Grid>

