<Page
    x:Class="DrumMidiEditorApp.pView.pMusic.PageMusic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrumMidiEditorApp.pView.pMusic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <UserControl.Resources>
        <Style TargetType="Grid">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer>
            <StackPanel Orientation="Vertical">

                <ContentControl>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBox x:Name="_MusicInfoBgmFilePathTextBox"
                            x:Uid="MusicInfoBgmFilePathTextBox"
                            Text="{x:Bind MusicInfo.BgmFilePath.RelativeFilePath, Mode=OneWay}" 
                            PlaceholderText="{x:Bind MusicInfo.BgmFilePath.RelativeFilePath, Mode=OneTime}"                   
                            HorizontalAlignment="Stretch"
                            TextChanged="MusicInfoBgmFilePathTextBox_TextChanged" />

                        <Button x:Name="_MusicInfoBgmFilePathButton"
                                Content="TEST"
                            Click="MusicInfoBgmFilePathButton_Click" />
                    </StackPanel>
                </ContentControl>

                <NumberBox x:Name="_MusicInfoBpmNumberBox" 
                    x:Uid="NumberBoxBpm"
                    Value="{x:Bind MusicInfo.Bpm, Mode=OneWay}" 
                    Minimum="{x:Bind ConfigMedia.BpmMinVolume, Mode=OneTime}"
                    Maximum="{x:Bind ConfigMedia.BpmMaxVolume, Mode=OneTime}"
                    PlaceholderText="{x:Bind MusicInfo.Bpm, Mode=OneTime}"                   
                    SmallChange="1" 
                    Width="200"
                    SpinButtonPlacementMode="Inline"
                    HorizontalAlignment="Left"
                    ValidationMode="InvalidInputOverwritten"
                    ValueChanged="MusicInfoBpmNumberBox_ValueChanged"
                />

                <NumberBox x:Name="_MusicInfoBgmPlaybackStartPositionNumberBox" 
                    x:Uid="MusicInfoBgmPlaybackStartPositionNumberBox"
                    Value="{x:Bind MusicInfo.BgmPlaybackStartPosition, Mode=OneWay}" 
                    Minimum="{x:Bind ConfigMedia.BgmPlaybackStartMinPosition, Mode=OneTime}"
                    Maximum="{x:Bind ConfigMedia.BgmPlaybackStartMaxPosition, Mode=OneTime}"
                    PlaceholderText="{x:Bind MusicInfo.BgmPlaybackStartPosition, Mode=OneTime}"                   
                    SmallChange="100" 
                    Width="200"
                    SpinButtonPlacementMode="Inline"
                    HorizontalAlignment="Left"
                    ValidationMode="InvalidInputOverwritten"
                    ValueChanged="MusicInfoBgmPlaybackStartPositionNumberBox_ValueChanged"
                />

                <NumberBox x:Name="_MusicInfoBgmVolumeNumberBox" 
                    x:Uid="MusicInfoBgmVolumeNumberBox"
                    Value="{x:Bind MusicInfo.BgmVolume, Mode=TwoWay}" 
                    Minimum="{x:Bind ConfigMedia.BgmMinVolume, Mode=OneTime}"
                    Maximum="{x:Bind ConfigMedia.BgmMaxVolume, Mode=OneTime}"
                    PlaceholderText="{x:Bind MusicInfo.BgmVolume, Mode=OneTime}"
                    SmallChange="10" 
                    Width="200"
                    SpinButtonPlacementMode="Inline"
                    HorizontalAlignment="Left"
                    ValidationMode="InvalidInputOverwritten"
                    ValueChanged="MusicInfoBgmVolumeNumberBox_ValueChanged"
                />

                <TextBox x:Name="_MusicInfoMemoTextBox"
                    x:Uid="MusicInfoMemoTextBox"
                    Text="{x:Bind MusicInfo.Info, Mode=TwoWay}" 
                    AcceptsReturn="True"
                    Height="200"
                    HorizontalAlignment="Stretch"
                />

                <local:UserControlEqualizer />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
